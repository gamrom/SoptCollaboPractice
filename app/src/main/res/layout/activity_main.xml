<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gamrom.seminarcollabo.MainActivity">



    <ImageView
        android:layout_width="20dp"
        android:layout_height="19dp"
        android:src="@drawable/search"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="36dp"
        android:id="@+id/searching"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_below="@+id/searching"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="5dp"
        android:id="@+id/editing"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="#HASHTAG"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/editing"
        android:id="@+id/hashtaging"
        />
    
    <ImageView
        android:layout_width="314dp"
        android:layout_height="121dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/hashtaging"
        android:src="@drawable/hashtagimage"
        android:id="@+id/hashtagimage"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/hashtagimage"
        android:layout_marginTop="24dp"
        android:id="@+id/graybar"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REVIEW"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="24dp"
        android:layout_below="@id/graybar"
        android:textSize="12dp"
        android:textColor="#131313"
        android:id="@+id/reviewing"
        />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/reviewing"
        >

    <ImageView
        android:layout_width="154dp"
        android:layout_height="188dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="17dp"

        android:src="@drawable/review1"
        android:id="@+id/reviewing1"
        />

    <ImageView
        android:layout_width="154dp"
        android:layout_height="188dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="17dp"
        android:layout_toRightOf="@+id/reviewing1"
        android:src="@drawable/review2"

        />

    </RelativeLayout>

</RelativeLayout>
